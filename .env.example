# Kite Trading Server - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Kite Connect API Credentials
# Get these from: https://kite.trade/
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here
KITE_REDIRECT_URI=http://localhost:3000/trade/redirect

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=order.log

# Session Configuration
SESSION_FILE=kite_session.json
SESSION_TIMEOUT=86400

# Docker Configuration
COMPOSE_PROJECT_NAME=kite-trading

# Development Settings (only for development)
DEV_MODE=false
RELOAD=false
