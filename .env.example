# Kite Connect API Credentials
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here
KITE_REDIRECT_URI=http://localhost:8080/callback

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=${LOG_DIR:-./logs}/order.log

# Session Configuration
SESSION_FILE=${DATA_DIR:-./data}/kite_session.json
SESSION_TIMEOUT=86400

# Directories
DATA_DIR=./data
LOG_DIR=./logs

# Browser-Assisted Re-authentication (Recommended)
BROWSER_REAUTH=true
REAUTH_SCHEDULE=daily

# Note: OTP authentication requires manual entry
# The system will automatically open your browser when tokens expire
